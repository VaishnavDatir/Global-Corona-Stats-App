<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="4dp"
    android:backgroundTint="#7AF4F4F4"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/llContent_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00000000"
        android:padding="3dp">

        <ImageView
            android:id="@+id/img_CountryFlag"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:src="@drawable/img_asset_global"
            android:layout_marginHorizontal="3dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:scaleType="fitCenter"
            />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="3dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="3dp"
            android:layout_height="68dp">
            
            <TextView
                android:id="@+id/txt_CountryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUNTRY NAME"
                android:textSize="22sp"
                android:textColor="#000000"
                android:maxLines="1"
                android:fontFamily="@font/pt_sans_caption"
                />

            <TextView
                android:id="@+id/cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cases: "
                android:textSize="17sp"
                android:textColor="#2B2B2B"
                android:textStyle="bold"
                android:maxLines="1"
                android:fontFamily="@font/oxygen"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:id="@+id/txt_CountryCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="987,654,321"
                android:textSize="17sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_toEndOf="@id/cases"
                android:maxLines="1"
                android:fontFamily="@font/oxygen"
                android:layout_alignParentBottom="true"
                />
            
        </RelativeLayout>
    
    </LinearLayout>

</androidx.cardview.widget.CardView>